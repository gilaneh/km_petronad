<?xml version="1.0" encoding="utf-8"?>
<odoo>
       <record id="fluids_list" model="ir.ui.view">
            <field name="name">km_petronad.fluids</field>
            <field name="model">km_petronad.fluids</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

    <record id="fluids_action" model="ir.actions.act_window">
        <field name="name">Fluid Data</field>
            <field name="res_model">km_petronad.fluids</field>
            <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Fluid"
          sequence="21"
          id="fluids_menu"
          parent="settings_menu"
          action="fluids_action"/>

</odoo>