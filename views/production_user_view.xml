<?xml version="1.0" encoding="utf-8"?>

<odoo>
<!--.............................................. user_view_production ................................-->
    <record id="production_record_user_view_production_list" model="ir.ui.view">
        <field name="name">km_petronad.production_record</field>
        <field name="model">km_petronad.production_record</field>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <tree editable="top" create="0" delete="0" >
                <field name="data_date"/>
                <field name="fluid"/>
                <field name="tank"/>
                <field name="shift"/>
                <field name="shift_group"/>
                <field name="register_type" invisible="1"/>
                <!--                    <field name="partner"/>-->
                <!--                    <field name="transporter"/>-->
                <!--                    <field name="transport_type"/>-->
                <!--                    <field name="barrel_quantity"/>-->
                <!--                    <field name="barrel_weight"/>-->
                <!--                    <field name="permit_no"/>-->
                <!--                    <field name="driver"/>-->
                <!--                    <field name="car_plate"/>-->
                <field name="analysis"/>
                <field name="amount"/>
                <field name="unit"/>
            </tree>
        </field>
    </record>

<!--.............................................. user_view_sale ................................-->
    <record id="production_record_user_view_sale_list" model="ir.ui.view">
        <field name="name">km_petronad.production_record</field>
        <field name="model">km_petronad.production_record</field>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <tree editable="top" create="0" delete="0" >
                <field name="data_date"/>
                <field name="fluid"/>
                <field name="tank"/>
                <field name="shift"/>
                <field name="shift_group"/>
                <field name="register_type" invisible="1"/>
                                    <field name="partner"/>
                                    <field name="transporter"/>
                                    <field name="transport_type"/>
                                    <field name="barrel_quantity"/>
                                    <field name="barrel_weight"/>
                                    <field name="permit_no"/>
                                    <field name="driver"/>
                                    <field name="car_plate"/>
                <field name="analysis"/>
                <field name="amount"/>
                <field name="unit"/>
            </tree>
        </field>
    </record>
<!--.............................................. user_view_feed_receive ................................-->
    <record id="production_record_user_view_feed_receive_list" model="ir.ui.view">
        <field name="name">km_petronad.production_record</field>
        <field name="model">km_petronad.production_record</field>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <tree editable="top" create="0" delete="0" >
                <field name="data_date"/>
                <field name="fluid"/>
                <field name="tank"/>
<!--                <field name="shift"/>-->
<!--                <field name="shift_group"/>-->
                <field name="register_type" invisible="1"/>
                                    <field name="partner"/>
<!--                                    <field name="transporter"/>-->
<!--                                    <field name="transport_type"/>-->
<!--                                    <field name="barrel_quantity"/>-->
<!--                                    <field name="barrel_weight"/>-->
<!--                                    <field name="permit_no"/>-->
                                    <field name="driver"/>
                                    <field name="car_plate"/>
                <field name="analysis"/>
                <field name="amount"/>
                <field name="unit"/>
            </tree>
        </field>
    </record>

    <!--.............................................. Actions ................................-->

    <record id="production_record_user_view_production_action" model="ir.actions.act_window">
        <field name="name">Production Record</field>
        <field name="res_model">km_petronad.production_record</field>
        <field name="view_mode">tree</field>
        <field name="domain">[('register_type', '=', 'production')]</field>

        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('production_record_user_view_production_list')}),
                ]"/>
    </record>

    <record id="production_record_user_view_sale_action" model="ir.actions.act_window">
        <field name="name">Production Record</field>
        <field name="res_model">km_petronad.production_record</field>
        <field name="view_mode">tree</field>
        <field name="domain">[('register_type', '=', 'sale')]</field>

        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('production_record_user_view_sale_list')}),
                ]"/>
    </record>

    <record id="production_record_user_view_feed_receive_action" model="ir.actions.act_window">
        <field name="name">Production Record</field>
        <field name="res_model">km_petronad.production_record</field>
        <field name="view_mode">tree</field>
        <field name="domain">[('register_type', '=', 'feed_receive')]</field>

        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('production_record_user_view_feed_receive_list')}),
                ]"/>
    </record>

    <!--.............................................. Menus ................................-->

    <menuitem name="Production Records"
              sequence="10"
              id="production_record_user_view_production_menu"
              parent="data_view_menu"
              action="production_record_user_view_production_action"/>

    <menuitem name="Sale Records"
              sequence="20"
              id="production_record_user_view_sale_menu"
              parent="data_view_menu"
              action="production_record_user_view_sale_action"/>

    <menuitem name="Feed Receive Records"
              sequence="30"
              id="production_record_user_view_feed_receive_menu"
              parent="data_view_menu"
              action="production_record_user_view_feed_receive_action"/>

</odoo>