<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="km_petronad_product_sale_wizard_form" model="ir.ui.view">
            <field name="name">km_petronad.product_sale.wizard.form</field>
            <field name="model">km_petronad.product_sale.wizard</field>
            <field name="arch" type="xml">
                <form edit="0" js_class="km_petronad_product_sale">

                    <group>
                        <group>
                            <!--                            <field name="project" options='{"no_open": True, "no_create": True}'/>-->
                            <field name="start_datetime" invisible="1"/>
                            <field name="end_datetime" invisible="1"/>
                            <field name="data_date"/>
                        </group>
                        <group>
                            <!--                            <field name="vendor" domain="[('company_type', '=', 'company')]" />-->

                        </group>
                    </group>
                    <group>
                        <group string="">
                            <field name="fluid" options="{'no_create': True, 'no_open': True}"
                                   domain="[('name', 'in', ['MEG','DEG','TEG','H2', 'MPG', 'GLYCERIN'])]"/>
                            <field name="amount" string="Amount (kg)"/>
                            <field name="transport_type"/>
                            <field name="tank" domain="[('fluid', '=', fluid)]"
                                   attrs="{'invisible':[('transport_type', '=', 'barrel')],
                                           'required':[('transport_type', '=', 'tanker')],}"
                                   options="{'no_create': True, 'no_open': True}"/>
                            <field name="tank_amount" attrs="{'invisible':[('transport_type', '=', 'barrel')]}"/>
                            <field name="tank_capacity" attrs="{'invisible':[('transport_type', '=', 'barrel')]}"/>
                            <field name="barrel_weight" attrs="{'invisible':[('transport_type', '=', 'tanker')],
                                                                'required':[('transport_type', '=', 'barrel')]}"/>
                            <field name="barrel_quantity" attrs="{'invisible':[('transport_type', '=', 'tanker')],
                                                                  'required':[('transport_type', '=', 'barrel')], }"/>
                            <field name="buyer" options="{'no_create': True, 'no_open': True}" />
                            <field name="transporter" options="{'no_create': True, 'no_open': True}" />
                            <field name="permit_no"/>
                            <field name="driver"/>
                            <field name="car_plate"/>
                        </group>
                        <group string="">
                        </group>
                    </group>

                    <footer>
                        <button name="process_data" string="Save" type="object" class="btn btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>

                </form>
            </field>
        </record>

        <record id="km_petronad_product_sale_wizard_action" model="ir.actions.act_window">
            <field name="name">Product Sale</field>
            <field name="res_model">km_petronad.product_sale.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


        <menuitem name="Product Sale"
                  sequence="20"
                  id="km_petronad_product_sale"
                  parent="km_petronad.data_entry_menu"
                  action="km_petronad_product_sale_wizard_action"/>
    </data>
</odoo>

