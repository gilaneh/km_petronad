<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="km_petronad_feed_receive_wizard_form" model="ir.ui.view">
            <field name="name">km_petronad.feed_receive.wizard.form</field>
            <field name="model">km_petronad.feed_receive.wizard</field>
            <field name="arch" type="xml">
                <form edit="0" js_class="km_petronad_feed_receive">

                    <group>
                        <group>
<!--                            <field name="project" options='{"no_open": True, "no_create": True}'/>-->
                            <field name="start_datetime" invisible="1"  />
                            <field name="end_datetime"  invisible="1"/>
                            <field name="data_date" />
                        </group>
                        <group>
<!--                            <field name="vendor" domain="[('company_type', '=', 'company')]" />-->

                        </group>
                    </group>
                    <group>
                        <group string="">
                            <field name="vendor" options="{'no_create': True, 'no_open': True}"/>
                            <field name="feed_tank" domain="[('fluid', '=', 'FEED')]" options="{'no_create': True, 'no_open': True}" />
                            <field name="feed_receive" />
                            <field name="analysis" />

                        </group>
                        <group string="">
                        </group>
                    </group>

                    <footer>
                        <button name="process_data" string="Save" type="object" class="btn btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>

                </form>
            </field>
        </record>

        <record id="km_petronad_feed_receive_wizard_action" model="ir.actions.act_window">
            <field name="name">Feed Receive</field>
            <field name="res_model">km_petronad.feed_receive.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


        <menuitem name="Feed Receive"
                  sequence="20"
                  id="km_petronad_feed_receive"
                  parent="km_petronad.data_entry_menu"
                  action="km_petronad_feed_receive_wizard_action"/>
    </data>
</odoo>

