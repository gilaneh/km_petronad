<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="km_petronad_data_input_wizard_a_form" model="ir.ui.view">
            <field name="name">km_petronad.data_input.wizard_a.form</field>
            <field name="model">km_petronad.data_input.wizard_a</field>
            <field name="arch" type="xml">
                <form edit="0" js_class="km_petronad_data_input">

                    <group>
                        <group>
                            <!--                            <field name="project" options='{"no_open": True, "no_create": True}'/>-->
                            <field name="start_datetime" invisible="1"/>
                            <field name="end_datetime" invisible="1"/>
                            <field name="data_date"/>
                        </group>
                        <group>
                            <field name="shift"/>
                            <field name="shift_group"/>

                        </group>

                    </group>
                    <div class="col-12 o_horizontal_separator">
                        Ethylene Glycol, unit: Kg
                    </div>
                    <div class="row text-center">
                        <div class="col-2">

                        </div>
                        <div class="col-3">
                            Amount
                        </div>
                        <div class="col-3">
                            Batch Number
                        </div>
                        <div class="col-3">
                            Tank
                        </div>
                    </div>

                    <div class="row">
                        <label class="col-2" for="feed_usage"></label>

                        <div class="col-3">
                            <field name="feed_usage"/>
                        </div>
                        <div class="col">
                            <field name="feed_batch_number"/>
                        </div>
                        <div class="col">
                            <field name="feed_tank"
                                   domain="['|', ('fluid', '=', 'FEED'),('fluid', '=', 'H1')]"
                                   options="{'no_create': True, 'no_open': True}"
                                   attrs="{'required': [('feed_usage', '!=', 0)]}"/>
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-2" for="meg_production"></label>

                        <div class="col-3">
                            <field name="meg_production"/>
                        </div>
                        <div class="col">
                            <field name="meg_batch_number"/>
                        </div>
                        <div class="col">
                            <field name="meg_tank" domain="[('fluid', '=', 'MEG')]"
                                   options="{'no_create': True, 'no_open': True}"
                                   attrs="{'required': [('meg_production', '!=', 0)]}"/>
                        </div>
                    </div>
                    <div>
                        <div class="row">
                            <label class="col-2" for="deg_production"></label>

                            <div class="col-3">
                                <field name="deg_production"/>
                            </div>
                            <div class="col">
                                <field name="deg_batch_number"/>
                            </div>
                            <div class="col">
                                <field name="deg_tank" domain="[('fluid', '=', 'DEG')]"
                                       options="{'no_create': True, 'no_open': True}"
                                       attrs="{'required': [('deg_production', '!=', 0)]}"/>
                            </div>
                        </div>
                        <div class="row">
                            <label class="col-2" for="teg_production"></label>

                            <div class="col-3">
                                <field name="teg_production"/>
                            </div>
                            <div class="col">
                                <field name="teg_batch_number"/>
                            </div>
                            <div class="col">
                                <field name="teg_tank" domain="[('fluid', '=', 'TEG')]"
                                       options="{'no_create': True, 'no_open': True}"
                                       attrs="{'required': [('teg_production', '!=', 0)]}"/>
                            </div>
                        </div>
                        <div class="row">
                            <label class="col-2" for="h1_production"></label>

                            <div class="col-3">
                                <field name="h1_production"/>
                            </div>
                            <div class="col">
                                <field name="h1_batch_number"/>
                            </div>
                            <div class="col">
                                <field name="h1_tank" domain="[('fluid', '=', 'HEAVY1')]"
                                       options="{'no_create': True, 'no_open': True}"
                                       attrs="{'required': [('h1_production', '!=', 0)]}"/>
                            </div>
                        </div>
                        <div class="row">
                            <label class="col-2" for="h2_production"></label>

                            <div class="col-3">
                                <field name="h2_production"/>
                            </div>
                            <div class="col">
                                <field name="h2_batch_number"/>
                            </div>
                            <div class="col">
                                <field name="h2_tank" domain="[('fluid', '=', 'HEAVY2')]"
                                       options="{'no_create': True, 'no_open': True}"
                                       attrs="{'required': [('h2_production', '!=', 0)]}"/>
                            </div>
                        </div>
                    </div>


                    <div class="col-12 o_horizontal_separator">
                        MPG, unit: Kg
                    </div>
<!--                    <div class="row text-center">-->
<!--                        <div class="col-2">-->

<!--                        </div>-->
<!--                        <div class="col-3">-->
<!--                            Amount-->
<!--                        </div>-->
<!--                        <div class="col-3">-->
<!--                            Batch Number-->
<!--                        </div>-->
<!--                        <div class="col-3">-->
<!--                            Tank-->
<!--                        </div>-->
<!--                    </div>-->

                    <div class="row">
                            <label class="col-2" for="mpg_production"></label>

                            <div class="col-3">
                                <field name="mpg_production"/>
                            </div>
                            <div class="col">
                                <field name="mpg_batch_number"/>
                            </div>
                            <div class="col">
                                <field name="mpg_tank" domain="[('fluid', '=', 'MPG')]"
                                       options="{'no_create': True, 'no_open': True}"
                                       attrs="{'required': [('mpg_production', '!=', 0)]}"/>
                            </div>
                        </div>
                                        <div class="col-12 o_horizontal_separator">
                        GLYCERIN, unit: Kg
                    </div>
                    <div class="row">
                            <label class="col-2" for="glycerin_production"></label>

                            <div class="col-3">
                                <field name="glycerin_production"/>
                            </div>
                            <div class="col">
                                <field name="glycerin_batch_number"/>
                            </div>
                            <div class="col">
                                <field name="glycerin_tank" domain="[('fluid', '=', 'GLYCERIN')]"
                                       options="{'no_create': True, 'no_open': True}"
                                       attrs="{'required': [('glycerin_production', '!=', 0)]}"/>
                            </div>
                        </div>
                    <group>

                    <field name="description" string="Daily Description"/>
                    </group>


                    <footer>
                        <button name="process_data" string="Save" type="object" class="btn btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>

                </form>
            </field>
        </record>

        <record id="km_petronad_data_input_wizard_a_action" model="ir.actions.act_window">
            <field name="name">Data Input</field>
            <field name="res_model">km_petronad.data_input.wizard_a</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


        <menuitem name="Production"
                  sequence="20"
                  id="km_petronad_data_input_a"
                  parent="km_petronad.data_entry_menu"
                  action="km_petronad_data_input_wizard_a_action"/>
    </data>
</odoo>

